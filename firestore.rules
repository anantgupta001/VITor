rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // User profile (campus selection for Vellore/Chennai shared email)
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Faculty list and faculty docs under each campus
    match /campuses/{campusSlug}/faculties/{facultyId} {
      allow read: if true;
      allow create: if false;
      allow update: if request.auth != null;
      allow delete: if false;

      // Reviews: anyone can read; signed-in users can write their own
      match /reviews/{userId} {
        allow read: if true;
        allow create, update: if request.auth != null && request.auth.uid == userId;
        allow delete: if false;
      }
    }
  }
}
